@model List<TipAndPackage>

@{
    ViewData["Title"] = "Home Page";
}

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header">Dashboard</h1>
    <div class="qod">
        <h2 class="sub-header">Quote of the Day</h2>
        <div class="quoteContent">
            <span>@ViewBag.quoteContent</span>
            <footer>@ViewBag.quoteAuthor</footer>
        </div>
    </div>
    
    <div id="d3graph" style="padding-top:60px">
       
    </div>
    <button type="button" class="btn btn-primary" aria-label="Left Align" style="float:right;margin-right:5px;" onclick="location.href='@Url.Action("Create", "Tips")'">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    </button>
    <h2 class="sub-header">Tips</h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Package</th>
                    <th>Title</th>
                    <th>Explanation</th>
                    <th>When?</th>
                    <th>Where?</th>
                    <th>Analogy</th>
                    <th>#</th>
                    <th>References</th>
                    <th>Created</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td> @item.PackageTitle </td>
                        <td>@item.TipTitle</td>
                        <td>@item.TipExplanation</td>
                        <td>@item.TipWhenTo</td>
                        <td>@item.TipWhere</td>
                        <td>@item.TipAnalogy</td>
                        <td>@item.TipHashtags</td>
                        <td>@item.TipRefs</td>
                        <td>@item.TipCreationDate.Day - @item.TipCreationDate.Month - @item.TipCreationDate.Year</td>
                    </tr>
                }
                
            </tbody>
        </table>
    </div>
</div>

<script src="http://d3js.org/d3.v3.min.js"></script>
<script src="~/js/d3.js"></script>
