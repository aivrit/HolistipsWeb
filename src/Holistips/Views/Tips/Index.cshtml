@model IEnumerable<Holistips.Models.Tip>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

    <h2>Index</h2>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TipAnalogy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipAuthorID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipCreationDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipExplanation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipHashtags)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipRefs)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipWhenTo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipWhere)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipAnalogy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipAuthorID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipCreationDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipExplanation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipHashtags)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipRefs)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipWhenTo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipWhere)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>