@model Holistips.Models.Tip

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h2>Create</h2>

    <form asp-action="Create">
        <div class="form-horizontal">
            <h4>Tip</h4>
            <hr />
